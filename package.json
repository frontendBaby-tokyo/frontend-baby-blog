{
	"name": "frontend-baby-blog",
	"type": "module",
	"version": "0.0.0",
	"description": "Tech blog by frontendBaby-tokyo. Main content focuses on frontend technologies. Developed with Astro",
	"author": "frontendBaby-tokyo",
	"license": "GPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "https://github.com/frontendBaby-tokyo/frontend-baby-blog"
	},
	"keywords": [
		"astro"
	],
	"bugs": {
		"url": "https://github.com/frontendBaby-tokyo/frontend-baby-blog/issues"
	},
	"scripts": {
		"dev": "bunx tinacms dev -c \"astro dev\"",
		"start": "astro dev",
		"build": "astro build",
		"build:gh-pages": "astro build",
		"sync": "astro sync",
		"preview": "astro preview",
		"postbuild": "pagefind --site dist",
		"format:check": "prettier --plugin-search-dir=. --check .",
		"format": "prettier --plugin-search-dir=. --write .",
		"lint": "eslint .",
		"pre-commit": "lint-staged",
		"prepare": "husky install"
	},
	"dependencies": {
		"@astrojs/react": "^4.3.0",
		"@astrojs/rss": "4.0.12",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"astro": "^5.11.0",
		"astro-font": "^0.0.72",
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"devDependencies": {
		"@astrojs/mdx": "4.3.0",
		"@astrojs/sitemap": "3.4.1",
		"@astrojs/tailwind": "5.1.0",
		"@pagefind/default-ui": "^1.0.4",
		"@tailwindcss/typography": "0.5.16",
		"@tinacms/cli": "^1.5.30",
		"@typescript-eslint/parser": "^6.16.0",
		"clsx": "2.1.1",
		"eslint": "^8.56.0",
		"eslint-plugin-astro": "^0.31.0",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.0",
		"mdast-util-to-string": "^4.0.0",
		"motion": "^10.16.4",
		"pagefind": "^1.0.3",
		"prettier": "^3.0.3",
		"prettier-config-standard": "^7.0.0",
		"prettier-plugin-astro": "^0.14.1",
		"reading-time": "^1.5.0",
		"slugify": "^1.6.6",
		"tailwind-merge": "2.0.0",
		"tailwindcss": "3.3.5",
		"tinacms": "^1.5.21",
		"typescript": "^5.2.2"
	},
	"lint-staged": {
		"*.{astro,js,jsx,ts,tsx,json}": [
			"prettier --write --plugin-search-dir=."
		]
	},
	"packageManager": "bun@1.2.17"
}
