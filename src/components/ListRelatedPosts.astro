---
import type { CollectionEntry } from 'astro:content'

import { cn, getPostSlugWithoutLang } from '@/utils'

type Props = {
	posts: CollectionEntry<'blog'>[]
}

const { posts } = Astro.props
const { lang } = Astro.params
---

<section class={cn(`flex flex-col md:flex-row sm:justify-between gap-8`)}>
	{
		posts.length > 0 ? (
			posts.map((post) => {
				return (
					<div class='flex flex-wrap gap-2'>
						<header class='flex justify-center items-center'>
							<a
								class='font-medium  hover:underline'
								href={`${import.meta.env.BASE_URL}${lang}/post/${getPostSlugWithoutLang(post)}/`}
							>
								{post.data.title}
							</a>
						</header>
					</div>
				)
			})
		) : (
			<span class='text-gray-500'>There are no related posts yet. ðŸ˜¢</span>
		)
	}
</section>
