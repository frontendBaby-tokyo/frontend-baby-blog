---
import { Image } from 'astro:assets'
import profileImage from '../assets/images/profile.png'
import { useTranslations } from '@/i18n/utils'
import type { Languages } from '@/i18n/utils'

const { lang } = Astro.params
const t = useTranslations(lang as Languages)
---

<div
	class='bg-gray-50 dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700 shadow-md transition-shadow duration-300'
>
	<div class='flex flex-col items-center'>
		<Image
			src={profileImage}
			alt='Profile Picture'
			width={160}
			height={160}
			class='w-40 h-40 rounded-lg object-cover'
		/>
		<h4 class='text-xl font-bold text-gray-900 dark:text-white mt-4 mb-2'>frontendBaby-tokyo</h4>
		<p class='text-sm text-gray-800 dark:text-gray-200 mb-4 whitespace-pre-line text-left'>
			{t('prof.aboutme')}
		</p>
	</div>
</div>
