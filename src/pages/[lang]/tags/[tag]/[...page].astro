---
import BaseLayout from '@/layouts/BaseLayout'
import ListPostsSimple from '@/components/ListPostsSimple'
import Pagination from '@/components/Pagination'
import Sidebar from '@/components/Sidebar'
import { getPostByTag, getTags } from '@/utils'
import { useTranslations, getTagKeyFromSlug } from '@/i18n/utils'
import { ui } from '@/i18n/ui'
import type { Languages } from '@/i18n/utils'
import { siteConfig } from '@/data/site.config'

export const getStaticPaths = async ({ paginate }) => {
	const tags = await getTags()
	const paths = []

	for (const tag of tags) {
		const jaSlug = ui.ja[`${tag}.slug` as any]
		const enSlug = ui.en[`${tag}.slug` as any]

		// 日本語のタグページ
		if (jaSlug) {
			const jaPosts = await getPostByTag('ja' as Languages, tag)
			const paginatedPosts = paginate(jaPosts, {
				params: { lang: 'ja', tag: jaSlug },
				pageSize: siteConfig.paginationSize
			})
			paths.push(...paginatedPosts)
		}

		// 英語のタグページ
		if (enSlug) {
			const enPosts = await getPostByTag('en' as Languages, tag)
			const paginatedPosts = paginate(enPosts, {
				params: { lang: 'en', tag: enSlug },
				pageSize: siteConfig.paginationSize
			})
			paths.push(...paginatedPosts)
		}
	}

	return paths
}

const { page } = Astro.props
const { lang, tag } = Astro.params
const t = useTranslations(lang as Languages)

// スラッグからタグキーを逆引き
const tagKey = getTagKeyFromSlug(lang as Languages, tag as string) || ''
const translatedTag = t(tagKey as any)

// メタデータの設定
const title =
	page.currentPage === 1
		? `${t('tags.taggedWith')} ${translatedTag}`
		: `${t('tags.taggedWith')} ${translatedTag} - ${t('pagination.page')} ${page.currentPage}`
---

<BaseLayout title={title}>
	<!-- 2カラムレイアウト: メインコンテンツ + サイドバー -->
	<div class='grid grid-cols-1 lg:grid-cols-[2fr_1fr] gap-8 mt-6'>
		<!-- メインコンテンツ -->
		<main>
			<h2 class='text-lg font-medium tracking-wide mb-4 text-gray-900 dark:text-white'>
				{
					lang === 'ja'
						? `「${translatedTag}」${t('tags.taggedWith')}`
						: `${t('tags.taggedWith')} "#${translatedTag}"`
				}
			</h2>
			<ListPostsSimple posts={page.data} />

			<!-- ページネーション -->
			{
				page.lastPage > 1 && (
					<div class='mt-8'>
						<Pagination page={page} />
					</div>
				)
			}
		</main>

		<!-- サイドバー -->
		<div class='order-first lg:order-last'>
			<Sidebar />
		</div>
	</div>
</BaseLayout>
